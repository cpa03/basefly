# Stripe
STRIPE_API_KEY="sk_test_xxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_STD_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_STD_MONTHLY_PRICE_ID="price_"

NEXT_PUBLIC_STRIPE_PRO_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_BUSINESS_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID="price_"

# posthog
NEXT_PUBLIC_POSTHOG_KEY=" "
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# admin account
ADMIN_EMAIL="admin@saasfly.io,root@saasfly.io"

# next auth debug
IS_DEBUG=false

# Database
POSTGRES_URL="postgresql://user:password@localhost:5432/db"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Documentation: docs/feature-flags.md
# 
# Default behavior:
# - Flags with "true" default are ENABLED by default (set to "false" to disable)
# - Flags with "false" default are DISABLED by default (set to "true" to enable)
# -----------------------------------------------------------------------------

# Billing Features (requires STRIPE_API_KEY, STRIPE_WEBHOOK_SECRET)
ENABLE_BILLING="true"                    # Master switch for billing features
ENABLE_STRIPE_CHECKOUT="true"            # Stripe checkout for new subscriptions
ENABLE_BILLING_PORTAL="true"             # Customer billing portal for subscription management

# Cluster Features (requires POSTGRES_URL)
ENABLE_CLUSTERS="true"                   # Kubernetes cluster management
ENABLE_AUTO_PROVISIONING="false"         # Auto-create clusters on subscription (experimental)
ENABLE_MULTI_REGION="false"              # Multi-region cluster support (experimental)

# Authentication Features (requires Clerk configuration)
ENABLE_MAGIC_LINKS="false"               # Passwordless magic link authentication
ENABLE_GOOGLE_OAUTH="false"              # Google OAuth provider (configure in Clerk)
ENABLE_GITHUB_OAUTH="false"              # GitHub OAuth provider (configure in Clerk)

# Notification Features (requires RESEND_API_KEY, RESEND_FROM)
ENABLE_EMAIL_NOTIFICATIONS="true"        # Email notifications for cluster/billing events
ENABLE_WEBHOOK_NOTIFICATIONS="false"     # Webhook notifications for external integrations

# Analytics Features
ENABLE_VERCEL_ANALYTICS="true"           # Vercel Analytics integration

# Admin Features (requires ADMIN_EMAIL configuration)
ENABLE_ADMIN_DASHBOARD="true"            # Admin dashboard access at /admin/dashboard
ENABLE_USER_MANAGEMENT="false"           # User management interface (experimental)

# Development/Debug Features (NEVER enable in production)
ENABLE_MOCK_PAYMENTS="false"             # Mock payments for testing (DEV ONLY)
VERBOSE_LOGGING="false"                  # Detailed logging output