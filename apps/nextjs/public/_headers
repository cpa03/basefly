# Cloudflare Pages Headers Configuration
# See: https://developers.cloudflare.com/pages/platform/headers
# Aligned with next.config.mjs security headers for consistency

/*
  # Security Headers (aligned with Vercel configuration)
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-DNS-Prefetch-Control: on
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # Cross-Origin Security Headers (added for Cloudflare alignment)
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

  # Additional Security Headers
  X-Permitted-Cross-Domain-Policies: none

  # Content-Security-Policy for XSS protection
  # Note: Includes Cloudflare Turnstile domain for bot protection
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https: http:; font-src 'self' data:; connect-src 'self' https://api.stripe.com https://clerk.basefly.io https://clerk.com https://*.clerk.com wss://*.clerk.com; frame-src 'self' https://challenges.cloudflare.com https://js.stripe.com https://hooks.stripe.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self'; upgrade-insecure-requests

  # Cache Control for HTML pages
  Cache-Control: public, max-age=0, must-revalidate

# Static assets - immutable caching (1 year)
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Font files - immutable caching
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Images - stale-while-revalidate
/images/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

# Optimized image formats
/*.webp
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

/*.avif
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

# API routes - security headers and no indexing
/api/*
  X-Content-Type-Options: nosniff
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-store

# tRPC routes - no indexing
/trpc/*
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-store

# API webhooks - additional security
/api/webhooks/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY

# Favicon and manifest - long-term caching
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

# Service worker - no caching
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
