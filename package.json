{
  "name": "basefly",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "ci:check": "pnpm typecheck && pnpm lint && pnpm test",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "clean:all": "git clean -xdf node_modules .turbo .next dist coverage",
    "reset": "pnpm clean:all && pnpm install",
    "db:push": "cd ./packages/db/ && bun db:push",
    "db:migrate": "cd ./packages/db/ && bun db:migrate:dev",
    "db:migrate:deploy": "cd ./packages/db/ && bun db:migrate:deploy",
    "db:migrate:create": "cd ./packages/db/ && bun db:migrate:create",
    "db:generate": "cd ./packages/db/ && bun db:generate",
    "db:studio": "cd ./packages/db/ && bun db:studio",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !stripe",
    "format": "turbo format --continue -- --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "format:fix": "turbo format --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "prepare": "husky",
    "typecheck": "turbo typecheck",
    "check-deps": "check-dependency-version-consistency .",
    "gen": "turbo gen --config 'turbo/generators/config.ts'",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:check": "pnpm audit --audit-level=high && pnpm outdated",
    "dx:check": "pnpm typecheck && pnpm lint && pnpm test && pnpm security:audit",
    "dx:fix": "pnpm lint:fix && pnpm format:fix",
    "env:verify": "node -e \"const fs=require('fs');const envExample=fs.existsSync('.env.example');const envLocal=fs.existsSync('.env.local');if(!envExample){console.error('❌ .env.example not found');process.exit(1)}if(!envLocal){console.warn('⚠️  .env.local not found. Copy .env.example to .env.local and configure your environment variables.');console.log('  Run: cp .env.example .env.local')}else{console.log('✅ Environment files verified')}\""
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.1",
    "@playwright/test": "^1.58.2",
    "@turbo/gen": "2.8.9",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "check-dependency-version-consistency": "6.0.0",
    "chrome-launcher": "^1.2.1",
    "eslint-plugin-turbo": "2.8.9",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.2",
    "lint-staged": "^15.2.10",
    "playwright": "^1.58.2",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwind-config-viewer": "^2.0.4",
    "turbo": "2.8.9",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.28.2",
  "prettier": "@saasfly/prettier-config",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix --cache --cache-location 'node_modules/.cache/.eslintcache'"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write --cache --cache-location='node_modules/.cache/.prettiercache'"
    ]
  }
}
