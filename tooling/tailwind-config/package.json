  },
  "devDependencies": {
    "@saasfly/eslint-config": "workspace:*",
    "@saasfly/prettier-config": "workspace:*",
    "@saasfly/typescript-config": "workspace:*",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.32.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@saasfly/eslint-config/base"
